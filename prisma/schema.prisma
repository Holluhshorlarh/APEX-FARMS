// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Person {
  id        String    @id @default(uuid())
  firstname String    @db.VarChar(20)
  lastname  String    @db.VarChar(20)
  email     String    @unique
  password  String
  role      Role      @default(user)
  products  Product[] @relation("person_product")
  orders    Order[]   @relation("person_order")

  @@map("person")
}

model Product {
  id        String   @id @default(uuid())
  name      String   @db.VarChar(20)
  category  Category @default(others)
  quantity  Int
  price     Int
  likes     Boolean  @default(false)
  person    Person   @relation("person_product", fields: [person_id], references: [id])
  person_id String   @unique
  orders    Order[]

  @@map("product")
}

model Order {
  id         String  @id @default(uuid())
  quantity   Int
  amount     Int
  person     Person  @relation("person_order", fields: [person_id], references: [id])
  person_id  String  @unique
  product    Product @relation(fields: [product_id], references: [id])
  product_id String  @unique

  @@map("order")
}

enum Role {
  user
  admin
}

enum Category {
  vegetables
  fruits
  beef
  poultry
  fishery
  cereals
  others
}
